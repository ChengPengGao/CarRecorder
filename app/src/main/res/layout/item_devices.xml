<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="150dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">


    <ImageView
        android:id="@+id/iv_devices"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_devices"
        android:text="行车记录仪"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/iv_devices"/>

    <TextView
        android:id="@+id/tv_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_devices"
        android:text="SN:234567433"
        android:textSize="16dp"
        android:layout_toRightOf="@id/iv_devices"/>

    <ImageView
        android:id="@+id/iv_unbind"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/arrow_right"/>

    <TextView
        android:id="@+id/tv_unbind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="设备解绑"
        android:textSize="18dp"
        android:textColor="@color/red"
        android:layout_toLeftOf="@id/iv_unbind"/>

</RelativeLayout>